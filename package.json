{
  "name": "server-koa",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "dev": "node --env-file=.env.dev --import=tsx --watch-path=./src src/app.ts",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.dev jest",
    "lint": "eslint src --fix",
    "build": "npm run clear && node esbuild.config.js",
    "start": "node --enable-source-maps --env-file=.env ./dist/app.js",
    "clear": "rimraf dist",
    "create:type": "tsc --declaration --emitDeclarationOnly",
    "knex:init": "knex init",
    "knex:make": "knex migrate:make",
    "knex:up": "knex migrate:latest",
    "knex:down": "knex migrate:rollback",
    "knex:down:all": "knex migrate:rollback --all",
    "knex:seed:make": "knex seed:make",
    "knex:seed:run": "knex seed:run",
    "knex:up:prod": "knex migrate:latest --env production",
    "knex:seed:prod:run": "knex seed:run --env production"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "axios": "^1.8.4",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "koa": "^2.16.0",
    "koa-compose": "^4.1.0",
    "koa-ratelimit": "^5.1.0",
    "lodash": "^4.17.21",
    "mysql2": "^3.13.0",
    "qs": "^6.14.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@swc/core": "^1.11.16",
    "@swc/jest": "^0.2.37",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa-compose": "^3.2.8",
    "@types/koa-ratelimit": "^5.0.5",
    "@types/koa__cors": "^5.0.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "tsx": "^4.19.3",
    "typescript-eslint": "^8.29.0"
  }
}